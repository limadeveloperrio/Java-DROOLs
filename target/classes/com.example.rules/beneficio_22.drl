package com.example.rules;

import com.motor.decision.dto.PersonDTO;
import com.motor.decision.dto.BenefitDTO;

rule "beneficio_22"
    salience 8
when
    $person: PersonDTO( age >= 50, yearsWorked >= 25, isWorking == true )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Bonificação por Tempo de Serviço");
    $b.setRule("beneficio_22.drl");
    $b.setHasBenefit(true);
    $person.addLisBenefit($b);
end

rule "sem beneficio_22"
    salience 8
when
    $person: PersonDTO( age < 50 || yearsWorked > 25 || isWorking == false )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Bonificação por Tempo de Serviço");
    $b.setRule("beneficio_22.drl");
    $b.setHasBenefit(false);
    $person.addLisBenefitNot($b);
end