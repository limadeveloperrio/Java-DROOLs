package com.example.rules;

import com.motor.decision.dto.PersonDTO;
import com.motor.decision.dto.BenefitDTO;

rule "beneficio_18"
    salience 3
when
    $person: PersonDTO( age >= 40, hasChildren == true, numChildren == 1 )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Auxílio Creche");
    $b.setRule("beneficio_18.drl");
    $b.setHasBenefit(true);
    $person.addLisBenefit($b);
end

rule "sem beneficio_18"
    salience 3
when
    $person: PersonDTO( age < 40 || hasChildren == false || numChildren != 1 )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Auxílio Creche");
    $b.setRule("beneficio_18.drl");
    $b.setHasBenefit(false);
    $person.addLisBenefitNot($b);
end