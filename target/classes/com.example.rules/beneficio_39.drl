package com.example.rules;

import com.motor.decision.dto.PersonDTO;
import com.motor.decision.dto.BenefitDTO;

rule "beneficio_39"
    salience 5
when
    $person: PersonDTO( income > 3000.0, isWorking == true, healthCondition == "Boa", maritalStatus == "Solteiro" )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Assistência Médica Avançada");
    $b.setRule("beneficio_39.drl");
    $b.setHasBenefit(true);
    $person.addLisBenefit($b);
end

rule "sem beneficio_39"
    salience 5
when
    $person: PersonDTO( income < 3000.0 || isWorking == false || healthCondition != "Boa" || maritalStatus != "Solteiro" )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Assistência Médica Avançada");
    $b.setRule("beneficio_39.drl");
    $b.setHasBenefit(false);
    $person.addLisBenefitNot($b);
end