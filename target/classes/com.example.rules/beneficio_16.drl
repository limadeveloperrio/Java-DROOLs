package com.example.rules;

import com.motor.decision.dto.PersonDTO;
import com.motor.decision.dto.BenefitDTO;

rule "beneficio_16"
    salience 5
when
    $person: PersonDTO( age >= 65, income < 3000.0, retired == true )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Pensão de Aposentadoria menor que 65 anos");
    $b.setRule("beneficio_16.drl");
    $b.setHasBenefit(true);
    $person.addLisBenefit($b);   
end

rule "sem beneficio_16"
    salience 5
when
    $person: PersonDTO( age < 65 || income > 3000.0 || retired == false )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Pensão de Aposentadoria menor que 65 anos");
    $b.setRule("beneficio_16.drl");
    $b.setHasBenefit(false);
    $person.addLisBenefitNot($b);   
end
