package com.example.rules;

import com.motor.decision.dto.PersonDTO;
import com.motor.decision.dto.BenefitDTO;

rule "Conceder Benefício D"
when
    $p : PersonDTO(sex == "M" && age < 18 && isWorking == false)
then
    BenefitDTO $b = new BenefitDTO();  
    $b.setBenefit("Auxílio Homem Jovem");
    $b.setRule("beneficio_49.drl");
    $b.setHasBenefit(true);
    $p.addLisBenefit($b);  
end

rule "sem Conceder Benefício D"
when
    $p : PersonDTO(sex != "M" || age > 18 || isWorking == true)
then
    BenefitDTO $b = new BenefitDTO();  
    $b.setBenefit("Auxílio Homem Jovem");
    $b.setRule("beneficio_49.drl");
    $b.setHasBenefit(false);
    $p.addLisBenefitNot($b);  
end


