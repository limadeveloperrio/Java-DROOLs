package com.example.rules;

import com.motor.decision.dto.PersonDTO;
import com.motor.decision.dto.BenefitDTO;

rule "beneficio_27"
    salience 5
when
    $person: PersonDTO( age >= 30, age <= 45, income > 3000.0, isWorking == true )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Seguro de Vida Trabalhista");
    $b.setRule("beneficio_27.drl");
    $b.setHasBenefit(true);
    $person.addLisBenefit($b);
end

rule "sem beneficio_27"
    salience 5
when
    $person: PersonDTO( age < 30 || age > 45 || income < 3000.0 || isWorking == false )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Seguro de Vida Trabalhista");
    $b.setRule("beneficio_27.drl");
    $b.setHasBenefit(false);
    $person.addLisBenefitNot($b);
end