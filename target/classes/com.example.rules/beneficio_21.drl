package com.example.rules;

import com.motor.decision.dto.PersonDTO;
import com.motor.decision.dto.BenefitDTO;

rule "beneficio_21"
    salience 10
when
    $person: PersonDTO( age >= 18, student == true, income < 2000.0 )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Bolsa Universitária");
    $b.setHasBenefit(true);
    $person.addLisBenefit($b);
    System.out.println("Benefício de Bolsa Universitária para: " + $person.getName());
end