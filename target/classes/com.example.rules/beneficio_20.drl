package com.example.rules;

import com.motor.decision.dto.PersonDTO;
import com.motor.decision.dto.BenefitDTO;

rule "beneficio_20"
    salience 1
when
    $person: PersonDTO( income < 1500.0, isWorking == true )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Auxílio Renda Baixa");
    $b.setRule("beneficio_20.drl");
    $b.setHasBenefit(true);
    $person.addLisBenefit($b);
end

rule "sem beneficio_20"
    salience 1
when
    $person: PersonDTO( income > 1500.0 || isWorking == false )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Auxílio Renda Baixa");
    $b.setRule("beneficio_20.drl");
    $b.setHasBenefit(false);
    $person.addLisBenefitNot($b);
end