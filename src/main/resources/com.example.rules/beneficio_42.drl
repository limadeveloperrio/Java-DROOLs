package com.example.rules;

import com.motor.decision.dto.PersonDTO;
import com.motor.decision.dto.BenefitDTO;

rule "beneficio_42"
    salience 5
when
    $person: PersonDTO( income < 1500.0, age < 25, student == true )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Auxílio Estudante Universitário");
    $b.setRule("beneficio_42.drl");
    $b.setHasBenefit(true);
    $person.addLisBenefit($b);
end

rule "sem beneficio_42"
    salience 5
when
    $person: PersonDTO( income > 1500.0 || age > 25 || student == false )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Auxílio Estudante Universitário");
    $b.setRule("beneficio_42.drl");
    $b.setHasBenefit(false);
    $person.addLisBenefitNot($b);
end