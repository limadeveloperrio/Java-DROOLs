package com.example.rules;

import com.motor.decision.dto.PersonDTO;
import com.motor.decision.dto.BenefitDTO;

rule "beneficio_26"
    salience 5
when
    $person: PersonDTO( income >= 1500.0, income <= 2500.0, retired == false, hasChildren == true )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Auxílio Creche");
    $b.setRule("beneficio_26.drl");
    $b.setHasBenefit(true);
    $person.addLisBenefit($b);
end

rule "sem beneficio_26"
    salience 5
when
    $person: PersonDTO( income < 1500.0 || income > 2500.0 || retired == true || hasChildren == false )
then
    BenefitDTO $b = new BenefitDTO();
    $b.setBenefit("Auxílio Creche");
    $b.setRule("beneficio_26.drl");
    $b.setHasBenefit(false);
    $person.addLisBenefitNot($b);
end
